// Connect to the db
MongoClient.connect(DBurl, function(err, db) {
  if (err) throw err;
  var dbo = db.db("ingreds");
  
  //Hitta object efter Nummer
  dbo.collection("ingreds").find({Nummer: "6134"}).toArray(function(err, result) {
    if (err) throw err;
    console.log(result);
    db.close();
  });
});
